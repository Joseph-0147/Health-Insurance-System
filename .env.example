# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=health_insurance_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DIALECT=postgres

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration (AES-256-GCM)
# ENCRYPTION_KEY must be exactly 32 bytes (base64 or hex)
ENCRYPTION_KEY=base64_32_byte_key_here_change_this

# Session Configuration
SESSION_SECRET=your_session_secret_change_this
SESSION_TIMEOUT=30

# MFA Configuration
MFA_ISSUER=HealthInsuranceSystem
MFA_WINDOW=2

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@healthinsurance.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Storage
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Cloud Storage (AWS S3 - Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=health-insurance-documents

# Security & Compliance
HIPAA_MODE=true
ENABLE_AUDIT_LOG=true
ENABLE_MFA=true
PASSWORD_MIN_LENGTH=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (CORS)
# Use CLIENT_URLS for multiple origins (comma-separated)
CLIENT_URL=http://localhost:3000
CLIENT_URLS=http://localhost:3000

# External API Integration
PROVIDER_VERIFICATION_API_KEY=your_provider_api_key
PHARMACY_API_KEY=your_pharmacy_api_key

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
